<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:label="@string/splash"
        android:name="com.example.clean_chitecture.presentation.views.splash.SplashFragment">
        <action
            android:id="@+id/action_splash_to_onboarding"
            app:destination="@id/onboarding" />
    </fragment>

    <fragment
        android:id="@+id/onboarding"
        android:name="com.example.clean_chitecture.presentation.views.onboarding.OnboardingFragment">
        <action
            android:id="@+id/action_onboarding_to_select_building"
            app:destination="@id/select_building" />
    </fragment>

    <fragment
        android:id="@+id/select_building"
        android:name="com.example.clean_chitecture.presentation.views.building.SelectBuildingFragment">
    </fragment>


    <fragment
        android:id="@+id/login"
        android:name="com.example.clean_chitecture.presentation.views.login.LoginFragment">
        <action
            android:id="@+id/action_login_to_otp"
            app:destination="@id/otp" />
    </fragment>

    <fragment
        android:id="@+id/otp"
        android:name="com.example.clean_chitecture.presentation.views.otp.OtpFragment">
    </fragment>

    <fragment
        android:id="@+id/sensor"
        android:label="@string/sensor"
        android:name="com.example.clean_chitecture.presentation.views.sensor.SensorFragment">
    </fragment>

    <fragment
        android:id="@+id/user"
        android:label="@string/users"
        android:name="com.example.clean_chitecture.presentation.views.user.UserFragment">
    </fragment>

    <fragment
        android:id="@+id/room"
        android:label="@string/room"
        android:name="com.example.clean_chitecture.presentation.views.room.RoomFragment">
    </fragment>

    <fragment
        android:id="@+id/setting"
        android:label="@string/setting"
        android:name="com.example.clean_chitecture.presentation.views.setting.SettingFragment">
    </fragment>

    <action
        android:id="@+id/action_to_login"
        app:destination="@id/login" />
    <action
        android:id="@+id/action_to_sensor"
        app:destination="@id/sensor" />
    <action
        android:id="@+id/action_to_user"
        app:destination="@id/user" />
    <action
        android:id="@+id/action_to_room"
        app:destination="@id/room" />
    <action
        android:id="@+id/action_to_setting"
        app:destination="@id/setting" />

</navigation>
